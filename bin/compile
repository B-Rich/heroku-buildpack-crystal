#!/bin/bash

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3
CRYSTAL_URL="https://github.com/manastech/crystal/releases/download/0.10.0/crystal-0.10.0-1-linux-x86_64.tar.gz"
CRYSTAL_DIR=/tmp/crystal
unset GIT_DIR

# Install Crystal
echo "-----> Installing Crystal"
mkdir -p $CRYSTAL_DIR
curl -sL $CRYSTAL_URL | tar xz -C $CRYSTAL_DIR --strip-component=1
export PATH="$PATH:/tmp/crystal"

# Export environment variables
if [ -d "$ENV_DIR" ]; then
  #whitelist_regex=${2:-''}
  #blacklist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'}

  for e in $(ls $ENV_DIR); do
    #echo "$e" | grep -E "$whitelist_regex" | grep -qvE "$blacklist_regex" &&
    export "$e=$(cat $ENV_DIR/$e)"
    #:
  done
fi

# Build the project
cd $BUILD_DIR

if [ -f shard.yml ]; then
  echo "-----> Installing Dependencies"
  $CRYSTAL_DIR/bin/crystal deps install --production
fi

if [ -f app.cr ]; then
  echo "-----> Compiling app.cr"
  $CRYSTAL_DIR/bin/crystal build app.cr --release
fi

if [ -f Makefile ]; then
  echo "-----> Running make"
  make RELEASE=1 CRYSTAL_BIN=/tmp/crystal/bin/crystal
fi
